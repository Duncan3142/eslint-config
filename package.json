{
  "name": "@duncan3142/basic-typescript-template",
  "description": "Basic typescript template",
  "keywords": [],
  "version": "0.0.1",
  "author": "Duncan Giles",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": "^18.0.0",
    "pnpm": "^8.0.0"
  },
  "imports": {
    "#/*": "./.tsc/dist/*"
  },
  "exports": {
    ".": {
			"types": "./.tsc/dist/index.d.ts",
			"import": "./.tsc/dist/index.js"
		}
  },
  "scripts": {
    "prepare": "husky install",
    "clean": "rm -rf .eslint .prettier .tsc .vitest",
		"format:prettier": "prettier --check --cache --cache-location='.prettier/cache' --cache-strategy=content .",
    "format": "turbo run format --cache-dir=\"./.turbo\"",
		"build:tsc": "tsc --build",
    "build": "turbo run build --cache-dir=\"./.turbo\"",
		"test:eslint": "eslint --max-warnings 0 --cache --cache-location '.eslint/cache' --cache-strategy content .",
		"test:vitest": "vitest run --coverage",
		"test": "turbo run test --cache-dir=\"./.turbo\""
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/config-conventional": "^17.6.3",
    "commitlint": "^17.6.3",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "turbo": "^1.9.3"
  }
}
